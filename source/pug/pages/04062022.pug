extends ../base/layout

block variables
  - var title = "Портфолио"
  - var currentPage = 'portfolio'
  - var innerPage = true
  - var albumDate = '04.06.2022'
  - var albumsArray = CLASSIC_COVERS
  - var album = albumsArray .find((el) => el.date === albumDate)
  - var albumNumber = album.coverSrc.replace(/\D+/g, '')
  - var albumMod = albumDate.replaceAll('.', '')

block main
    +album(album, albumNumber, albumMod, 5)
